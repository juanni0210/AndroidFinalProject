<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cst2335.finalproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalProject">
        <activity android:name=".EmptyCarActivity"></activity>
        <activity android:name=".Favorites" />
        <activity android:name=".SongsterFavouriteList"></activity>
        <activity android:name=".SongsterSearch" />
        <activity android:name=".Favorites"></activity>
        <activity android:name=".CarDatabase" />
        <activity android:name=".TriviaEmptyActivity"></activity>
        <activity android:name=".TriviaDetailsFragment" />
        <activity android:name=".TriviaGameResultActivity" />
        <activity android:name=".TriviaGameOngoingActivity" />
        <activity android:name=".TriviaGameLaunchActivity" />
        <uses-library
            android:name="com.google.android.maps"
            android:required="true" />

        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name=".SoccerGames"
            android:label="@string/title_activity_soccer_games">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>