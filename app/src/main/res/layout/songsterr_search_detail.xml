<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/songsterDetailsLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/songsterr_bg"
    android:layout_centerInParent="true">

    <TextView
        android:id="@+id/songsterDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/songsterr_details"
        android:textColor="@color/dark_blue"
        android:background="@color/blue"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailSongName"
        android:textColor="@color/dark_blue"
        android:layout_marginTop="230dp"
        android:layout_marginStart="60dp"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailSongID"
        android:layout_marginStart="60dp"
        android:layout_below="@id/detailSongName"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailArtistName"
        android:textColor="@color/dark_blue"
        android:layout_marginStart="60dp"
        android:textSize="20sp"
        android:layout_below="@id/detailSongID"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailArtistID"
        android:layout_marginStart="60dp"
        android:layout_below="@id/detailArtistName"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:text="@string/goToFav"
        app:backgroundTint="@color/blue"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:textSize="17sp"
        android:id="@+id/songsterrDetailGoButton"/>

    <ImageButton
        android:id="@+id/songsterrMain"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/songsterrDetailGoButton"
        android:background="@drawable/song_icon"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="185dp"
        android:layout_below="@id/detailArtistName"
        android:layout_marginTop="50dp"
        android:background="@drawable/like_icon"
        android:id="@+id/songsterrDetailFavoriteButton"
        tools:ignore="ContentDescription" />
</RelativeLayout>