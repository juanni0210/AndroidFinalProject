<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoccerGamesFragment"
    android:background="@drawable/rating_bg"
    android:padding="15dp"
    android:id="@+id/newsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_centerHorizontal="true"
            android:paddingTop="120dp"
            android:textAppearance="?android:textAppearanceLarge" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingTop="20dp"
            android:layout_below="@id/newsTitle">
        </ImageView>

        <TextView
            android:id="@+id/newsDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_below="@id/image"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:id="@+id/blank1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsDate"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/newsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/blank1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/blank2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsDescription"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/newsLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/blank2"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:textAppearanceMedium" />

        <ImageButton
            android:id="@+id/readBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/browse" />

        <ImageButton
            android:id="@+id/saveBtn"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/readBtn"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/save" />

        <ImageButton
            android:id="@+id/favoriteBtn"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/saveBtn"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="70dp"
            android:src="@drawable/favorite" />
    </RelativeLayout>
</FrameLayout>